<div class="app">
  <header class="header">
    <div class="container">
      <h1 class="header-content title">Breweries</h1>
    </div>
  </header>
  <main class="app-main">
    <div class="container">
      <div class="row">
        {{#each model.data as |brewery|}}
          <div class="row-item">
            <div class="row-item__image">
              <img src={{brewery.images.icon}} alt="" class="row-item__image--img image">
            </div>
            <div class="row-item__text">
              <p class="row-item__text--text row-item__text--name">{{brewery.name}}</p>
              <p class="row-item__text--text row-item__text--date">{{brewery.established}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </main>
  <footer class="footer">
    <div class="container">
      <p class="footer-content credits">Coded by Woody Evins</p>
    </div>
  </footer>
</div>
